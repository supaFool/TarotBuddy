<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-background-color 0xffd466ff?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="132.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/2.2" fx:controller="controller.ReadingController">
    <children>
        <HBox id="HBox" alignment="CENTER" layoutX="374.0" layoutY="101.0" spacing="5.0">
            <children>
                <Button mnemonicParsing="false" onAction="#close" text="Home">
                    <effect>
                        <DropShadow offsetX="5.0" offsetY="5.0">
                            <color>
                                <Color blue="0.392" green="0.392" red="0.392" fx:id="x1"/>
                            </color>
                        </DropShadow>
                    </effect>
                    <font>
                        <Font name="Microsoft YaHei" size="12.0" fx:id="x2"/>
                    </font>
                </Button>
                <Button mnemonicParsing="false" text="Get Reading" textAlignment="LEFT">
                    <effect>
                        <DropShadow color="$x1" offsetX="5.0" offsetY="5.0"/>
                    </effect>
                    <font>
                        <Font name="Microsoft YaHei UI" size="12.0"/>
                    </font>
                </Button>
                <HBox id="HBox" alignment="CENTER" spacing="5.0">
                    <children>
                        <Button font="$x2" mnemonicParsing="false" onAction="#exit" text="Exit">
                            <effect>
                                <ColorAdjust brightness="0.04580152671755733" hue="1.0"
                                             saturation="0.6564885496183206"/>
                            </effect>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="15.0"/>
                    </padding>
                </HBox>
            </children>
        </HBox>
        <VBox id="VBox" alignment="CENTER" layoutX="14.0" layoutY="35.0" spacing="20.0">
            <children>
                <MenuButton fx:id="typeOfReading" font="$x2" mnemonicParsing="false"
                            text="What Type Of Reading Do You Want">
                    <effect>
                        <Reflection/>
                    </effect>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#wants3Card" text="3 Card - Past-Present-Future"/>
                        <MenuItem mnemonicParsing="false" text="More Coming Soon!!!"/>
                    </items>
                </MenuButton>
                <HBox id="HBox" alignment="CENTER" spacing="5.0">
                    <children>
                        <ToggleButton fx:id="helpToggle" font="$x2" mnemonicParsing="false" onAction="#setHelp"
                                      text="Reading Helper Enabled">
                            <tooltip>
                                <Tooltip text="Enable to show guides for reading the spread and the cards"/>
                            </tooltip>
                        </ToggleButton>
                        <CheckBox fx:id="invert" mnemonicParsing="false" onAction="#invertSelected"
                                  text="Inverted Cards">
                            <tooltip>
                                <Tooltip text="Turn on to allow cards  to be reversed"/>
                            </tooltip>
                        </CheckBox>
                    </children>
                </HBox>
            </children>
        </VBox>
        <Text fx:id="selection" fontSmoothingType="LCD" layoutX="356.0" layoutY="19.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="">
            <effect>
                <Reflection/>
            </effect>
        </Text>
    </children>
    <effect>
        <SepiaTone/>
    </effect>
</AnchorPane>
